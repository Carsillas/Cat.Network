<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <DebugType>embedded</DebugType>
        <EmbedAllSources>true</EmbedAllSources>
        <DebugSymbols>true</DebugSymbols>
        <LangVersion>12</LangVersion>
        <PackageId>Carsillas.Cat.Network</PackageId>
    </PropertyGroup>

    <PropertyGroup>
        <Title>Cat Network</Title>
        <Authors>Carsillas</Authors>
        <RepositoryUrl>https://github.com/Carsillas/Cat.Network</RepositoryUrl>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageOutputPath>$(SolutionDir)artifacts</PackageOutputPath>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Carsillas.Cat.Network.Generator" Version="1.0.0" />
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="2.1.1" />
    </ItemGroup>

</Project>
